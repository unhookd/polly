  job(
    "bootstrap",
    [{"image"=>"polly:latest","user"=>"root"}],
    [{"run"=>{"name"=>"bootstrap","command"=>"
      echo sleeping 15
      sleep 15
    "}}],{},"/home/app"
  )
}

@gitch_pipeline = continuous {
  #TODO: build @bootstrap_artifact w/ --in-cluster
